FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    "(inlet|outlet|wing|symFront|symBack)"
    {
        type            zeroGradient;
    }
    "(symFront|symBack)"
    {
        type            symmetryPlane;
    }
    topAndBottom
    {
        type slip;
    }
}

